{% layout 'theme' %}
<div id="street-collector-customer-portal">
  <div class="container">
    <h1>Authenticating Street Collector Customer Portal</h1>
    <p>Please wait while we redirect you...</p>
    
    <script>
      // Redirect to customer dashboard after authentication
      window.addEventListener('load', function() {
        // Check if customer is logged in
        {% if customer %}
          window.location.href = '/pages/customer-dashboard';
        {% else %}
          // Fallback redirect or error handling
          window.location.href = '/account/login';
        {% endif %}
      });
    </script>
  </div>
</div>

<style>
  #street-collector-customer-portal {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    text-align: center;
  }
  
  .container {
    max-width: 400px;
    padding: 20px;
    background-color: #f4f4f4;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }
</style> 