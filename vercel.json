{
  "version": 2,
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "app/api/payouts/notifications/stream/route.ts": {
      "maxDuration": 60
    },
    "app/api/vendor/products/upload/route.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/process-scheduled-payouts",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/process-scheduled-payouts",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/subscription-credits",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/sync-gmail",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/sync-shopify-orders",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/sync-shopify-orders?full=true",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/sync-shopify-products",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/update-exchange-rates",
      "schedule": "0 4 * * *"
    }
  ]
}
